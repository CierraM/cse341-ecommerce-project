<%- include('../includes/head.ejs') %>
    <!-- <link rel="stylesheet" href="/css/product.css"> -->
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="px-4">
           
        
        <% if (prods.length > 0) { %>
            <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ">
                <% for (let product of prods) { %>
                    <div class="col-sm-2 mt-4 ">
                    <article class="product-item card w-100 h-100 ">
                        <div class="card-body">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>"
                                class="card-img-top">
                        </div>
                        <div class="card__content card-body">
                            <h2 class="product__price card-title">$<%= product.price %></h2>
                            <p class="product__description card-text"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
                                <% if (isAuthenticated) { %>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %>
                        </div>
                    </div>
                    </article>
                </div>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>