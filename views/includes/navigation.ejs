<div class="backdrop"></div>
<header class="main-header">
    <!-- <button id="side-menu-toggle">Menu</button> -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggler">
                <ul class="main-header__item-list navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="main-header__item nav-item">
                        <a class="<%= path === '/' ? 'active' : '' %> nav-link" href="/">Shop</a>
                    </li>
                    <li class="main-header__item nav-item">
                        <a class="<%= path === '/products' ? 'active' : '' %> nav-link" href="/products">Products</a>
                    </li>
                    <% if (isAuthenticated) { %>
                        <li class="main-header__item nav-item">
                            <a class="<%= path === '/cart' ? 'active' : '' %> nav-link" href="/cart">Cart</a>
                        </li>
                        <li class="main-header__item nav-item">
                            <a class="<%= path === '/orders' ? 'active' : '' %> nav-link" href="/orders">Orders</a>
                        </li>
                        <li class="main-header__item nav-item">
                            <a class="<%= path === '/admin/add-product' ? 'active' : '' %> nav-link"
                                href="/admin/add-product">Add
                                Product
                            </a>
                        </li>
                        <li class="main-header__item nav-item">
                            <a class="<%= path === '/admin/products' ? 'active' : '' %> nav-link"
                                href="/admin/products">Admin
                                Products
                            </a>
                        </li>
                        <% } %>
                            <% if (!isAuthenticated) { %>
                                <li class="main-header__item nav-item">
                                    <a class="<%= path === '/login' ? 'active' : '' %> nav-link" href="/login">Login</a>
                                </li>
                                <li class="main-header__item nav-item">
                                    <a class="<%= path === '/signup' ? 'active' : '' %> nav-link"
                                        href="/signup">Signup</a>
                                </li>
                                <% } else { %>
                                    <li class="main-header__item nav-item">
                                        <form action="/logout" method="post">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="nav-link">Logout</button>
                                        </form>
                                    </li>
                                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>

